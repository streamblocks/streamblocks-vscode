{
    "name": "streamblocks-cal",
    "displayName": "cal",
    "description": "CAL Actor Language Extension with a debugger",
    "author": "EPFL VLSC",
    "license": "GPL-3.0-or-later",
    "version": "0.0.1",
    "publisher": "StreamBlocks",
    "repository": {
        "type": "git",
        "url": "https://github.com/streamblocks/streamblocks-vscode"
    },
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:cal"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "cal",
                "aliases": [
                    "CAL Actor Language",
                    "CAL",
                    "cal"
                ],
                "extensions": [
                    ".cal",
                    ".nl",
                    ".CAL"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cal",
                "scopeName": "source.cal",
                "path": "./syntaxes/cal.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "CAL (StreamBlocks)",
            "properties": {
                "streamblocks-cal.compiler.path": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "null",
                    "description": "Path to StreamBlocks CAL compiler. If null, the extension will not be able to compile the code",
                    "scope": "window"
                },
                "streamblocks-cal.language server.connection type": {
                    "type": "string",
                    "enum": [
                        "process io",
                        "socket"
                    ],
                    "default": "process io",
                    "description": "Type of connection with CAL Language Server. If socket, the external language server needs to be started before",
                    "scope": "window"
                },
                "streamblocks-cal.language server.socket address": {
                    "type": [
                        "string"
                    ],
                    "default": "localhost:5008",
                    "description": "CAL Language Server remote address (in case of socket type of connection). If null, the extension will use the default address (localhost:5008)",
                    "scope": "window"
                }
            }
        },
        "menus": {
            "editor/title/run": [
                {
                    "command": "streamblocks-cal.cal-debug.runEditorContents",
                    "when": "resourceLangId == cal"
                },
                {
                    "command": "streamblocks-cal.cal-debug.debugEditorContents",
                    "when": "resourceLangId == cal"
                }
            ],
            "commandPalette": [
                {
                    "command": "streamblocks-cal.cal-debug.debugEditorContents",
                    "when": "resourceLangId == cal"
                },
                {
                    "command": "streamblocks-cal.cal-debug.runEditorContents",
                    "when": "resourceLangId == cal"
                }
            ],
            "debug/variables/context": [
                {
                    "command": "streamblocks-cal.cal-debug.toggleFormatting",
                    "when": "debugType == 'cal-debug' && debugProtocolVariableMenuContext == 'simple'"
                }
            ]
        },
        "commands": [
            {
                "command": "streamblocks-cal.cal-debug.debugEditorContents",
                "title": "Debug File",
                "category": "CAL Debug",
                "enablement": "!inDebugMode",
                "icon": "$(debug-alt)"
            },
            {
                "command": "streamblocks-cal.cal-debug.runEditorContents",
                "title": "Run File",
                "category": "CAL Debug",
                "enablement": "!inDebugMode",
                "icon": "$(play)"
            },
            {
                "command": "streamblocks-cal.cal-debug.toggleFormatting",
                "title": "Toggle between decimal and hex formatting"
            }
        ],
        "breakpoints": [
            {
                "language": "cal"
            }
        ],
        "debuggers": [
            {
                "type": "cal-debug",
                "label": "CAL Debug",
                "languages": [
                    "cal"
                ],
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to a text file.",
                                "default": "${workspaceFolder}/${command:AskForProgramName}"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": true
                            },
                            "trace": {
                                "type": "boolean",
                                "description": "Enable logging of the Debug Adapter Protocol.",
                                "default": true
                            },
                            "compileError": {
                                "type": "string",
                                "description": "Simulates a compile error in 'launch' request.",
                                "enum": [
                                    "default",
                                    "show",
                                    "hide"
                                ],
                                "enumDescriptions": [
                                    "default: show fake compile error to user",
                                    "show fake compile error to user",
                                    "do not show fake compile error to user"
                                ]
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "cal-debug",
                        "request": "launch",
                        "name": "CAL Debug",
                        "program": "${workspaceFolder}/${command:AskForProgramName}",
                        "stopOnEntry": true
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "CAL Debug: Launch",
                        "description": "A new configuration for 'debugging' a user selected CAL file.",
                        "body": {
                            "type": "cal-debug",
                            "request": "launch",
                            "name": "CAL Debug",
                            "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
                            "stopOnEntry": true
                        }
                    }
                ],
                "variables": {
                    "AskForProgramName": "streamblocks-cal.cal-debug.getProgramName"
                }
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^13.13.25",
        "@types/vscode": "^1.49.0",
        "typescript": "^3.9.7",
        "vscode-test": "^1.4.0",
        "vscode-debugadapter-testsupport": "^1.49.0-pre.0"
    },
    "dependencies": {
        "vsce": "^1.95.0",
        "vscode-languageclient": "^6.1.3",
        "await-notify": "1.0.1",
        "vscode-debugadapter": "^1.49.0-pre.0"
    },
    "scripts": {
        "prepublish": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
