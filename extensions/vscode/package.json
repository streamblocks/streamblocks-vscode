{
    "name": "streamblocks-cal",
    "displayName": "CAL",
    "version": "0.2.0",
    "publisher": "StreamBlocks",
    "description": "CAL Actor Language IntelliSense & debugging for VS Code",
    "author": {
        "name": "EPFL VLSC",
        "url": "https://www.epfl.ch/labs/vlsc/"
    },
    "categories": [
        "Programming Languages",
        "Debuggers",
        "Linters",
        "Snippets"
    ],
    "keywords": [
        "CAL Actor Language",
        "CAL",
        "cal"
    ],
    "icon": "images/caltrop.png",
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "activationEvents": [
        "onLanguage:cal"
    ],
    "engines": {
        "vscode": "^1.49.0"
    },
    "main": "out/extension",
    "license": "GPL-3.0-or-later",
    "homepage": "https://github.com/streamblocks/streamblocks-vscode/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/streamblocks/streamblocks-vscode/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/streamblocks/streamblocks-vscode"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "CAL",
            "properties": {
                "cal.compiler.path": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "null",
                    "description": "Path to CAL compiler. If null, the extension will not be able to compile the code",
                    "scope": "window"
                },
                "cal.languageServer.connectionType": {
                    "type": "string",
                    "enum": [
                        "Process IO",
                        "Socket"
                    ],
                    "enumDescriptions": [
                        "Connects internally to a server library",
                        "Connects to a remote server via socket \n Note: The server must be started before"
                    ],
                    "default": "Process IO",
                    "description": "Type of connection with a Language Server. If socket, a remote Language Server needs to be started before option selection",
                    "scope": "window"
                },
                "cal.languageServer.socketAddress": {
                    "type": [
                        "string"
                    ],
                    "default": "localhost:5008",
                    "markdownDescription": "Remote Language Server address (used in case of socket type of connection). If null, the extension will default to *localhost:5008*",
                    "scope": "window"
                }
            }
        },
        "languages": [
            {
                "id": "cal",
                "extensions": [
                    ".cal",
                    ".nl",
                    ".CAL"
                ],
                "aliases": [
                    "CAL Actor Language",
                    "CAL",
                    "cal"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "debuggers": [
            {
                "type": "cal",
                "label": "CAL Graal DAP",
                "languages": [
                    "cal"
                ],
                "initialConfigurations": [
                    {
                        "type": "cal",
                        "request": "attach",
                        "name": "CAL Graal DAP",
                        "debugServer": 4711
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "CAL Graal DAP: Attach",
                        "description": "A new configuration for 'debugging' a user selected CAL file.",
                        "body": {
                            "type": "cal",
                            "request": "attach",
                            "name": "CAL Graal DAP",
                            "debugServer": 4711
                        }
                    }
                ]
            }
        ],
        "breakpoints": [
            {
                "language": "cal"
            }
        ],
        "grammars": [
            {
                "language": "cal",
                "scopeName": "source.cal",
                "path": "./syntaxes/cal.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "cal",
                "path": "./snippets/cal.snippets.json"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^13.13.25",
        "@types/vscode": "^1.49.0",
        "typescript": "^3.9.7",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "vsce": "^1.95.0",
        "vscode-languageclient": "^6.1.3"
    },
    "scripts": {
        "prepublish": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
